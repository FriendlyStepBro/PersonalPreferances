#--Default Aliases
alias ls='ls --color=auto'
alias la='ls -a'
alias grep='grep --color=auto'
alias bat='bat --color=always'
alias svim='sudoedit'
alias ~='/home/fsb'

#--Config Commands
alias updateConfig='echo <(cd ~/.config && git commit -a -m "Updated Config" && git fetch && git push)'

#--Source Reload
alias rld='source ~/.bashrc'
alias rlda='source ~/.bash_alias'

#--FZF Aliases
alias fp='fzf -m --preview="bat --color=always {}"'
alias nfp='nvim $(fzf -m --preview="bat --color=always {}")'

#--Python Shortcuts
alias py='python'
alias pyvenv='source /home/fsb/python/venv/bin/activate'

#--Ollama Auto Load Model
alias ol32='ollama run llama3.2:3b'
alias ast='ollama run assistant'

#--Pacman Aliases
alias pacman='sudo pacman'

#--Tmux Aliases
# alias tmux='tmux --rcfile ~/.bashrc'
